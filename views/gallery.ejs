<html lang="en" data-wf-page="619520505b916bffa81f67bb">
  <head>
    <%- include('includes/meta') %> <%- include('includes/head') %>

    <link href="https://www.specialisedsteering.com/gallery" rel="canonical" />
    <link rel="stylesheet" href="../css/specialised-steering.css" />
    <link rel="stylesheet" href="../css/gallery.css" />
    <script src="../js/gallery.js" defer></script>
  </head>
  <body>
    <%- include('includes/nav') %>
    <main>
      <section class="section main">
        <div class="container">
          <h1>Gallery: OEM-Standard Hydraulic Repairs</h1>
          <p>
            This gallery shows completed hydraulic component repairs and service
            exchange units across mining, agriculture, and automotive
            applications. Each job is stripped, inspected, repaired, and tested
            to OEM specification. If you need a quote or turnaround estimate,
            contact us with your component details.
          </p>
        </div>
      </section>

      <section class="section gallery-section">
        <div class="container">
          <% if (error) { %>
          <div class="gallery-error">
            <p><strong>Gallery Unavailable</strong></p>
            <p><%= error %></p>
          </div>
          <% } else if (hasPhotos) { %>
          <div class="masonry-wrapper">
            <div id="photo-gallery" class="photo-gallery masonry">
              <% photos.forEach((photo, index) => { %>
              <div class="gallery-item masonry-item" data-photo-id="<%= photo.id %>">
                <img
                  src="<%= photo.thumbnailUrl %>"
                  data-src="<%= photo.url %>"
                  data-width="<%= photo.width %>"
                  data-height="<%= photo.height %>"
                  alt="<%= photo.description || photo.filename %>"
                  class="gallery-photo masonry-content"
                  loading="<%= index < 6 ? 'eager' : 'lazy' %>"
                />
              </div>
              <% }); %>
            </div>
          </div>
          <div
            id="gallery-loading"
            class="gallery-loading"
            style="display: none"
          >
            <p>Loading gallery...</p>
          </div>
          <% } else { %>
          <div class="gallery-empty">
            <p>No photos available at this time.</p>
          </div>
          <% } %>
        </div>
      </section>
    </main>
    <script src="https://unpkg.com/imagesloaded@4/imagesloaded.pkgd.min.js" defer></script>
    <script src="../js/masonry-w3bits.js" defer></script>
    <%- include('includes/footer') %> <%- include('includes/blockjs') %>
  </body>
</html>
