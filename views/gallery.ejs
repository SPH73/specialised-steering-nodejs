<html lang="en" data-wf-page="619520505b916bffa81f67bb">
  <head>
    <%- include('includes/meta') %> <%- include('includes/head') %>

    <link href="https://www.specialisedsteering.com/gallery" rel="canonical" />
    <link rel="stylesheet" href="../css/specialised-steering.css" />
    <script src="../js/gallery.js" defer></script>
  </head>
  <body>
    <%- include('includes/nav') %>
    <main>
      <section class="section main">
        <div class="container">
          <h1>Welcome To Our Gallery Of Completed Projects!</h1>
          <p>
            At Specialised Steering, we take pride in the quality of our hydraulic
            component repair work across the mining, agricultural, and automotive
            industries. We believe in transparency, and this gallery showcases the
            craftsmanship and dedication we bring to every project for our valued
            clients. Browse through these photos to see firsthand the results of our
            expertise and the exceptional service you can expect from us.
          </p>
        </div>
      </section>

      <section class="section gallery-section">
        <div class="container">
          <% if (error) { %>
          <div class="gallery-error">
            <p><strong>Gallery Unavailable</strong></p>
            <p><%= error %></p>
          </div>
          <% } else if (hasPhotos) { %>
          <div id="photo-gallery" class="photo-gallery" data-layout="auto">
            <% photos.forEach((photo, index) => { %>
            <div class="gallery-item" data-photo-id="<%= photo.id %>">
              <img
                src="<%= photo.thumbnailUrl %>"
                data-src="<%= photo.url %>"
                data-width="<%= photo.width %>"
                data-height="<%= photo.height %>"
                alt="<%= photo.description || photo.filename %>"
                class="gallery-photo"
                loading="lazy"
              />
            </div>
            <% }); %>
          </div>
          <div id="gallery-loading" class="gallery-loading" style="display: none;">
            <p>Loading gallery...</p>
          </div>
          <% } else { %>
          <div class="gallery-empty">
            <p>No photos available at this time.</p>
          </div>
          <% } %>
        </div>
      </section>
    </main>
    <%- include('includes/footer') %> <%- include('includes/blockjs') %>
  </body>
</html>

