  <head>
    <%- include('includes/head') %> <%- include('includes/meta') %>
    <link href="https://www.specialisedsteering.com/contact" rel="canonical" />
    <script src="../js/block-scripts.js" defer></script>
    <%- include('includes/recaptcha-script') %>
    <script>
      // Set form load time for spam detection
      document.addEventListener("DOMContentLoaded", function () {
        const formLoadTimeInput = document.getElementById("formLoadTime");
        if (formLoadTimeInput) {
          formLoadTimeInput.value = Date.now();
        }
      });

      function onSubmit(token) {
        // reCAPTCHA automatically adds the token to the form, so we don't need to add it manually
        // Just submit the form - the token is already included by reCAPTCHA
        const form = document.getElementById("contactForm");
        form.submit();
      }
    </script>
  </head>
  <body>
    <%- include('includes/analytics') %>
    <%- include('includes/nav') %>
    <main>
      <section id="contact-us" class="section main">
        <div class="container">
          <h1>Contact us for repairs and technical support</h1>
          <div id="contact-form" class="form-block w-form">
            <h2>Get in Touch</h2>
            <p>
              Searching for hydraulic repairs near you? Our Germiston, Gauteng
              workshop serves the Johannesburg region and customers across South
              Africa. Include component type, machine model, symptoms, and
              urgency, and we respond within one business day.
            </p>
            <%- include('includes/forms/contact-form') %>
          </div>
        </div>
      </section>
    </main>
    <%- include('includes/footer') %> <%- include('includes/blockjs') %>
  </body>
</html>
